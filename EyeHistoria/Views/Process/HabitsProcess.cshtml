@model EyeHistoria.Models.Habits

@{
    Layout = "_ProcessLayout";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f8f9fa;
        margin: 20px; 
    }

    .timeline-container {
        display: flex;
        align-items: center;
        justify-content: space-around;
        margin-bottom: 20px;
    }

    .timeline {
        display: flex;
        align-items: center;
        flex: 1;
    }

    .timeline-circle {
        width: 20px;
        height: 20px;
        background-color: #ced4da;
        border-radius: 50%;
        border: 2px solid #fff;
        margin-right: 20px;
    }

        .timeline-circle:not(:last-child) {
            background-color: #007bff;
            margin-left: 0; 
        }

    .timeline-line {
        flex: 1;
        height: 2px;
        background-color: #ced4da;
        margin-left: -20px; 
    }

        .timeline-line:first-child {
            background-color: #007bff;
        }

    #now {
        background-color: #007bff;
    }

    h4 {
        color: #007bff;
        font-size: 30px; 
        margin-bottom: 20px;
    }

    h5 {
        font-size: 18px;
    }

    .general {
        font-weight: bold;
        color: #007bff;
    }

    .form-container {
        font-family: 'Montserrat', sans-serif;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 14px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: bold;
        margin-bottom: 15px; 
        display: block; 
    }

    input[type="text"],
    input[type="number"],
    input[type="date"],
    input[type="datetime"],
    input[type="datetime-local"],
    select {
        font-family: 'Montserrat', sans-serif;
        width: 100%;
        max-width: 500px; 
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid #ced4da;
        border-radius: 16px;
        margin-bottom: 14px; 
    }

    input[type="submit"] {
        font-family: 'Montserrat', sans-serif;
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 16px;
        cursor: pointer;
        transition: background-color 0.8s, color 0.8s, box-shadow 0.8s, transform 0.8s;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }

        input[type="submit"]:hover {
            background-color: #28a745; 
            color: #fff; 
            transform: translateY(-3px); 
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); 
        }

    .next-link {
        font-family: 'Montserrat', sans-serif;
        margin-top: 20px;
        display: block;
        text-align: right;
        color: #007bff;
        text-decoration: none;
    }

        .next-link:hover {
            text-decoration: underline;
        }

   
    .next-button-container {
        text-align: right;
    }
</style>

<h5>STEP FIVE: HABITS (You're almost there!)'</h5>

<div class="timeline-container">
    <!-- Timeline -->
    <div class="timeline">
        <div class="timeline-circle"></div>
        <div class="timeline-line" id="now"></div>
        <div class="timeline-circle"></div>
        <div class="timeline-line" id="now"></div>
        <div class="timeline-circle"></div>
        <div class="timeline-line" id="now"></div>
        <div class="timeline-circle"></div>
        <div class="timeline-line" id="now"></div>
        <div class="timeline-circle"></div>
        <div class="timeline-line" id="now"></div>
        <div class="timeline-circle"></div>
    </div>
</div>

<h4>7. Habits</h4>
<h5>Please learn more about the patient's lifestyle, habits.</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="HabitsProcess" id="habitsForm" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="p_smoke" class="control-label general"></label>
                <select asp-for="p_smoke" class="form-control">
                    <option value="Yes">Yes</option>
                    <option value="No" selected>No</option>
                </select>
                <span asp-validation-for="p_smoke" class="text-danger"></span>
            </div>
            <div class="form-group" id="s_freq">
                <label asp-for="s_freq" class="control-label"></label>
                <input asp-for="s_freq" class="form-control" placeholder="1">
                <span asp-validation-for="s_freq" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="p_drink" class="control-label general"></label>
                <select asp-for="p_drink" class="form-control">
                    <option value="Yes">Yes</option>
                    <option value="No" selected>No</option>
                </select>
                <span asp-validation-for="p_drink" class="text-danger"></span>
            </div>
            <div class="form-group" id="d_freq">
                <label asp-for="d_freq" class="control-label"></label>
                <input asp-for="d_freq" class="form-control" placeholder="2"/>
                <span asp-validation-for="d_freq" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="p_game" class="control-label general"></label>
                <select asp-for="p_game" class="form-control">
                    <option value="Yes">Yes</option>
                    <option value="No" selected>No</option>
                </select>
                <span asp-validation-for="p_game" class="text-danger"></span>
            </div>
            <div class="form-group" id="g_freq">
                <label asp-for="g_freq" class="control-label"></label>
                <input asp-for="g_freq" class="form-control" placeholder="2"/>
                <span asp-validation-for="g_freq" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="p_read" class="control-label general"></label>
                <select asp-for="p_read" class="form-control">
                    <option value="Yes">Yes</option>
                    <option value="No" selected>No</option>
                </select>
                <span asp-validation-for="p_read" class="text-danger"></span>
            </div>
            <div class="form-group" id="r_freq">
                <label asp-for="r_freq" class="control-label"></label>
                <input asp-for="r_freq" class="form-control" placeholder="4"/>
                <span asp-validation-for="r_freq" class="text-danger"></span>
            </div>

            <div class="form-group next-button-container">
                <input type="submit" value="Create" class="btn btn-primary" a/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Hide or show fields based on the initial value of ...
            toggleFields1();
            toggleFields2();
            toggleFields3();
            toggleFields4();

            // Handle change event of p_smoke
            $('#p_smoke').on('change', function () {
                toggleFields1();
            });

            // Handle change event of p_drink
            $('#p_drink').on('change', function () {
                toggleFields2();
            });

            // Handle change event of p_game
            $('#p_game').on('change', function () {
                toggleFields3();
            });

            // Handle change event of p_read
            $('#p_read').on('change', function () {
                toggleFields4();
            });

            // Function to toggle visibility of fields
            function toggleFields1() {
                var smokeValue = $('#p_smoke').val();

                if (smokeValue === 'Yes') {
                    $('#s_freq').show();
                } else {
                    $('#s_freq').hide();
                }
            }

            // Function to toggle visibility of fields
            function toggleFields2() {
                var drinkValue = $('#p_drink').val();

                if (drinkValue === 'Yes') {
                    $('#d_freq').show();
                } else {
                    $('#d_freq').hide();
                }
            }

            // Function to toggle visibility of fields
            function toggleFields3() {
                var gameValue = $('#p_game').val();

                if (gameValue === 'Yes') {
                    $('#g_freq').show();
                } else {
                    $('#g_freq').hide();
                }
            }

            // Function to toggle visibility of fields
            function toggleFields4() {
                var readValue = $('#p_read').val();

                if (readValue === 'Yes') {
                    $('#r_freq').show();
                } else {
                    $('#r_freq').hide();
                }
            }
        });
    </script>
}
