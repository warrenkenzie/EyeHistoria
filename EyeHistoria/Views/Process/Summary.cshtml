@model EyeHistoria.Models.Process

@{
    Layout = "_ProcessLayout";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f8f9fa;
        margin: 20px;
    }

    .form-container {
        font-family: 'Montserrat', sans-serif;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 14px;
        margin: 20px;

    }

    .general {
        font-weight: bold; 
        color: #007bff;
    }

    .accordion-item {
        margin-bottom: 10px;
        padding-bottom: 10px;
    }

    .accordion-body {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 15px;
        margin: 20px;
        border-radius: 10px;
    }

    .accordion-button {
        font-weight: bold;
        padding: 20px;
    }

    h3 {
        padding-top: 40px;
        padding-left: 24px;
        color: #007bff;
    }

    .summary {
        padding-top: 40px;
        padding-left: 20px;
        font-size: 40px;
        color: #007bff;
    }

    p {
        padding-left: 20px;
        font-size: 20px;
    }
</style>

<h2 class="summary"><strong>Summary</strong></h2>
<p>Below is an overview of the patient's information and your history-taking performance.</p>

<h3><strong>Patient Overview</strong></h3>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" />

<div class="form-container">
    <div class="accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#demographicCollapse" aria-expanded="true" aria-controls="demographicCollapse">
                    Demographic
                </button>
            </h2>
            <div id="demographicCollapse" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <strong>Name:</strong> @Model.demographic.p_name <br />
                    <strong>Race:</strong> @Model.demographic.p_race <br />
                    <strong>Age:</strong> @Model.demographic.p_age <br />
                    <strong>Occupation:</strong> @Model.demographic.p_occupation <br />
                    <strong>Gender:</strong> @Model.demographic.p_gender <br />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-container">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#chiefComplaintCollapse" aria-expanded="false" aria-controls="chiefComplaintCollapse">
                Chief Complaint
            </button>
        </h2>
        <div id="chiefComplaintCollapse" class="accordion-collapse collapse">
            <div class="accordion-body">
                <strong>Purpose of Visit:</strong> @Model.chiefComplaint.p_chiefcomplaint <br />
            </div>
        </div>
    </div>
</div>
<div class="form-container">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#personalOcularHistoryCollapse" aria-expanded="false" aria-controls="personalOcularHistoryCollapse">
                Personal Ocular History
            </button>
        </h2>
        <div id="personalOcularHistoryCollapse" class="accordion-collapse collapse">
            <div class="accordion-body">
                <strong>Eyewear:</strong> @Model.personalOcularHistory.p_prescription <br />
                @{
                        if (@Model.personalOcularHistory.p_prescription == "Yes")
                    {
                        <strong>Type:</strong> @Model.personalOcularHistory.pre_type <br />
                        <strong>Date of Prescription:</strong> @Model.personalOcularHistory.pre_sdate <br />
                        <strong>Date of Last Use (Empty = Still using):</strong> @Model.personalOcularHistory.pre_edate <br />
                    }
                }
                <strong>Eye Surgery/Procedure:</strong> @Model.personalOcularHistory.p_procedure <br />
                @{
                    if (@Model.personalOcularHistory.p_procedure == "Yes")
                    {
                        <strong>Type:</strong> @Model.personalOcularHistory.pro_type <br />
                        <strong>Date of Surgery/Procedure:</strong> @Model.personalOcularHistory.pro_sdate <br />
                        <strong>Date of Recovery (Empty = Still recovering):</strong> @Model.personalOcularHistory.pro_edate <br />
                    }
                }
                <strong>Eye Condition:</strong> @Model.personalOcularHistory.p_condition <br />
                @{
                    if (@Model.personalOcularHistory.p_condition == "Yes")
                    {
                        <strong>Type:</strong> @Model.personalOcularHistory.con_type <br />
                        <strong>Date of Diagnosis:</strong> @Model.personalOcularHistory.con_sdate <br />
                        <strong>Date of Recovery (Empty = Still recovering):</strong> @Model.personalOcularHistory.con_edate <br />
                    }
                }
            </div>
        </div>
    </div>
</div>
<div class="form-container">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#familyOcularHistoryCollapse" aria-expanded="false" aria-controls="familyOcularHistoryCollapse">
                Family Ocular History
            </button>
        </h2>
        <div id="familyOcularHistoryCollapse" class="accordion-collapse collapse">
            <div class="accordion-body">
                <strong>History of Family Eye Disease:</strong> @Model.familyOcularHistory.pf_diseases <br />
                @{
                    if (@Model.familyOcularHistory.pf_diseases == "Yes")
                    {
                        <strong>Type:</strong> @Model.familyOcularHistory.dis_type <br />
                        <strong>Family Member:</strong> @Model.familyOcularHistory.dis_member <br />
                    }
                }
            </div>
        </div>
    </div>
</div>
<div class="form-container">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#personalHealthHistoryCollapse" aria-expanded="false" aria-controls="personalHealthHistoryCollapse">
                Personal Health History
            </button>
        </h2>
        <div id="personalHealthHistoryCollapse" class="accordion-collapse collapse">
            <div class="accordion-body">
                <strong>Allergy:</strong> @Model.personalHealthHistory.p_allergy <br />
                @{
                    if (@Model.personalHealthHistory.p_allergy == "Yes")
                    {
                        <strong>Type:</strong> @Model.personalHealthHistory.all_type <br />
                    }
                }
                <strong>Medication:</strong> @Model.personalHealthHistory.p_medication <br />
                @{
                    if (@Model.personalHealthHistory.p_medication == "Yes")
                    {
                        <strong>Type:</strong> @Model.personalHealthHistory.med_type <br />
                        <strong>Date of Prescription:</strong> @Model.personalHealthHistory.med_sdate <br />
                        <strong>Date of Last Use (Empty = Still medicating):</strong> @Model.personalHealthHistory.med_edate <br />
                    }
                }

                <strong>Health Condition:</strong> @Model.personalHealthHistory.p_hcondition <br />
                @{
                    if (@Model.personalHealthHistory.p_hcondition == "Yes")
                    {
                        <strong>Type:</strong> @Model.personalHealthHistory.hcon_type <br />
                        <strong>Date of Diagnosis:</strong> @Model.personalHealthHistory.hcon_sdate <br />
                        <strong>Date of Recovery (Empty = Still recovering):</strong> @Model.personalHealthHistory.hcon_edate <br />
                    }
                }
            </div>
        </div>
    </div>
</div>
<div class="form-container">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#familyHealthHistoryCollapse" aria-expanded="false" aria-controls="familyHealthHistoryCollapse">
                Family Health History
            </button>
        </h2>
        <div id="familyHealthHistoryCollapse" class="accordion-collapse collapse">
            <div class="accordion-body">
                <strong>History of Family Health Condition:</strong> @Model.familyHealthHistory.pf_hdiseases <br />
                @{
                    if (@Model.familyHealthHistory.pf_hdiseases == "Yes")
                    {
                        <strong>Health Condition:</strong> @Model.familyHealthHistory.hdis_type <br />
                        <strong>Family Member:</strong> @Model.familyHealthHistory.hdis_member <br />
                    }
                }
            </div>
        </div>
    </div>
</div>
<div class="form-container">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#habitsCollapse" aria-expanded="false" aria-controls="habitsCollapse">
                Habits
            </button>
        </h2>
        <div id="habitsCollapse" class="accordion-collapse collapse">
            <div class="accordion-body">
                <strong>Smoke:</strong> @Model.habits.p_smoke <br />
                @{
                    if (@Model.habits.p_smoke == "Yes")
                    {
                        <strong>Cigars/per day:</strong> @Model.habits.s_freq <br />
                    }
                }
                <strong>Drink:</strong> @Model.habits.p_drink <br />
                @{
                    if (@Model.habits.p_drink == "Yes")
                    {
                        <strong>Drinks/per day:</strong> @Model.habits.d_freq <br />
                    }
                }
                <strong>Video Games:</strong> @Model.habits.p_game <br />
                @{
                    if (@Model.habits.p_game == "Yes")
                    {
                        <strong>Hours/per day for video games:</strong> @Model.habits.g_freq <br />
                    }
                }
                <strong>Read:</strong> @Model.habits.p_read <br />
                @{
                    if (@Model.habits.p_read == "Yes")
                    {
                        <strong>Hours/per day for reading:</strong> @Model.habits.r_freq <br />
                    }
                }
            </div>
        </div>
    </div>
</div>

<!--  CHATBOT  -->
<body>
    <script type="text/javascript">
        (function (d, t) {
            var v = d.createElement(t), s = d.getElementsByTagName(t)[0];
            v.onload = function () {
                window.voiceflow.chat.load({
                    verify: { projectID: '65ae81a7103c763cd9106c71' },
                    url: 'https://general-runtime.voiceflow.com',
                    versionID: 'production',
                    launch: {
                        event: {
                            type: "launch", payload: {
                                Demographics: {
                                    p_name: "@Model.demographic.p_name",
                                    p_race: "@Model.demographic.p_race",
                                    p_age: "@Model.demographic.p_age",
                                    p_occuption: "@Model.demographic.p_occupation",
                                    p_gender: "@Model.demographic.p_gender"
                                },
                                ChiefComplaint: {
                                    p_chiefcomplaint: "@Model.chiefComplaint.p_chiefcomplaint"
                                },
                                PersonalOcularHistory: {
                                    p_prescription: "@Model.personalOcularHistory.p_prescription",
                                    p_procedure: "@Model.personalOcularHistory.p_procedure",
                                    p_condition: "@Model.personalOcularHistory.p_condition"
                                },
                                FamilyOcularHistory: {
                                    pf_diseases: "@Model.familyOcularHistory.pf_diseases",
                                    dis_type: "@Model.familyOcularHistory.dis_type",
                                    dis_member: "@Model.familyOcularHistory.dis_member"
                                },
                                PersonalHealthHistory: {
                                    p_allergy: "@Model.personalHealthHistory.p_allergy",
                                    p_medication: "@Model.personalHealthHistory.p_medication",
                                    p_hcondition: "@Model.personalHealthHistory.p_hcondition",
                                    all_type: "@Model.personalHealthHistory.all_type",
                                    med_type: "@Model.personalHealthHistory.med_type",
                                    hcon_type: "@Model.personalHealthHistory.hcon_type"
                                },
                                FamilyHealthHistory: {
                                    pf_hdiseases: "@Model.familyHealthHistory.pf_hdiseases",
                                    hdis_type: "@Model.familyHealthHistory.hdis_type",
                                    hdis_member: "@Model.familyHealthHistory.hdis_member"
                                },
                                Habits: {
                                    p_smoke: "@Model.habits.p_smoke",
                                    p_drink: "@Model.habits.p_drink",
                                    s_freq: "@Model.habits.s_freq",
                                    d_freq: "@Model.habits.d_freq"
                                }
                            }
                        }
                    }
                });
            }
            v.src = "https://cdn.voiceflow.com/widget/bundle.mjs"; v.type = "text/javascript"; s.parentNode.insertBefore(v, s);
        })(document, 'script');
    </script>

</body>
