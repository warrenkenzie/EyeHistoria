@model EyeHistoria.Models.ChiefComplaint

@{
    Layout = "_ProcessLayout";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f8f9fa;
        margin: 20px; /* Add margin for overall spacing */
    }

    h4 {
        color: #007bff;
        font-size: 30px; /* Reduce font size for a balanced look */
        margin-bottom: 20px; /* Add space below h4 */
    }

    h5 {
        font-size: 18px;
    }

    .form-container {
        font-family: 'Montserrat', sans-serif;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 14px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: bold;
        margin-bottom: 15px; /* Add more space between label and input */
        display: block; /* Ensure each label is on a new line */
    }

    input[type="text"],
    input[type="number"],
    select {
        font-family: 'Montserrat', sans-serif;
        width: 100%;
        max-width: 500px; /* Limit input box width */
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid #ced4da;
        border-radius: 16px;
        margin-bottom: 14px; /* Add space between input boxes */
    }

    input[type="submit"] {
        font-family: 'Montserrat', sans-serif;
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 16px;
        cursor: pointer;
        transition: background-color 0.8s, color 0.8s, box-shadow 0.8s, transform 0.8s; /* Add box-shadow to the transition */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Initial box shadow */
    }

        input[type="submit"]:hover {
            background-color: #28a745; /* Change background color on hover to green */
            color: #fff; /* Change text color on hover to white */
            transform: translateY(-3px); /* Offset the button slightly on hover */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Adjust box shadow on hover */
        }

    .next-link {
        font-family: 'Montserrat', sans-serif;
        margin-top: 20px;
        display: block;
        text-align: right;
        color: #007bff;
        text-decoration: none;
    }

        .next-link:hover {
            text-decoration: underline;
        }

    /* Center the Next button */
    .next-button-container {
        text-align: right;
    }
</style>

<h4>2. Chief Complaint</h4>
<h5>Please find out why the patient has visited the optometrist today.</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChiefComplaintProcess" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="p_chiefcomplaint" class="control-label"></label>
                <input asp-for="p_chiefcomplaint" class="form-control" placeholder="Experiencing eye redness, pain, and irritation for the past two days"/>
                <span asp-validation-for="p_chiefcomplaint" class="text-danger"></span>
            </div>
            <div class="form-group next-button-container">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="next-link">
    <a asp-action="PersonalOcularHistoryProcess">Next</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
