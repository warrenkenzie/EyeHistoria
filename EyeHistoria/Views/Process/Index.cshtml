@model EyeHistoria.Models.Demographic

@{
    Layout = "_ProcessLayout";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">

<style>
    body {
        font-family: 'Montserrat', sans-serif;
        background-color: #f8f9fa;
        margin: 20px; /* Add margin for overall spacing */
    }

    .timeline-container {
        display: flex;
        align-items: center;
        justify-content: space-around;
        margin-bottom: 20px;
    }

    .timeline {
        display: flex;
        align-items: center;
        flex: 1;
    }

    .timeline-circle {
        width: 20px;
        height: 20px;
        background-color: #ced4da;
        border-radius: 50%;
        border: 2px solid #fff;
        margin-right: 20px;
    }

        .timeline-circle:first-child {
            background-color: #007bff;
            margin-left: 0; /* Remove margin for the first circle */
        }

    .timeline-line {
        flex: 1;
        height: 2px;
        background-color: #ced4da;
        margin-left: -20px; /* Remove spacing at the start of the lines */
    }

        .timeline-line:first-child {
                background-color: #007bff;
        }

    #now {
        background-color: #007bff;
    }

    h4 {
        color: #007bff;
        font-size: 30px; /* Reduce font size for a balanced look */
        margin-bottom: 20px; /* Add space below h4 */
    }

    h5 {
        font-size: 18px;
    }

    .form-container {
        font-family: 'Montserrat', sans-serif;
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: 14px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: bold;
        margin-bottom: 15px; /* Add more space between label and input */
        display: block; /* Ensure each label is on a new line */
    }

    input[type="text"],
    input[type="number"],
    select {
        font-family: 'Montserrat', sans-serif;
        width: 100%;
        max-width: 300px; /* Limit input box width */
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid #ced4da;
        border-radius: 16px;
        margin-bottom: 14px; /* Add space between input boxes */
    }

    input[type="submit"] {
        font-family: 'Montserrat', sans-serif;
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 16px;
        cursor: pointer;
        transition: background-color 0.8s, color 0.8s, box-shadow 0.8s, transform 0.8s; /* Add box-shadow to the transition */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Initial box shadow */
    }

        input[type="submit"]:hover {
            background-color: #28a745; /* Change background color on hover to green */
            color: #fff; /* Change text color on hover to white */
            transform: translateY(-3px); /* Offset the button slightly on hover */
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Adjust box shadow on hover */
        }

    /* Styling for the "Next" link */
    .next-link {
        position: fixed;
        top: 50%;
        right: 20px;
        transform: translateY(30%);
        color: #fff;
        padding: 10px 20px;
        cursor: pointer;
        text-decoration: none !important; /* Remove default link underline */
        transition:color 0.3s, transform 0.3s;
        z-index: 999; /* Set a high z-index to ensure the link appears above other elements */
    }

        .next-link:hover {
            color: #fff;
            transform: translateY(2px);
        }

    /* Center the Next button */
    .next-button-container {
        text-align: right;
    }
</style>

<h5>STEP ONE: DEMOGRAPHIC</h5>

<div class="timeline-container">
    <!-- Timeline -->
    <div class="timeline">
        <div class="timeline-circle"></div>
        <div class="timeline-line" id="now"></div>
        <div class="timeline-circle"></div>
        <div class="timeline-line"></div>
        <div class="timeline-circle"></div>
        <div class="timeline-line"></div>
        <div class="timeline-circle"></div>
        <div class="timeline-line"></div>
        <div class="timeline-circle"></div>
        <div class="timeline-line"></div>
        <div class="timeline-circle"></div>
    </div>
</div>

<h4>1. Demographic</h4>
<h5>Please collect the patient's personal information.</h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" class="form-container">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="p_name" class="control-label"></label>
                <input asp-for="p_name" class="form-control" placeholder="John Doe" />
                <span asp-validation-for="p_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="p_race" class="control-label"></label>
                <input asp-for="p_race" class="form-control" placeholder="Chinese" />
                <span asp-validation-for="p_race" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="p_age" class="control-label"></label>
                <input asp-for="p_age" class="form-control" placeholder="18" />
                <span asp-validation-for="p_age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="p_occupation" class="control-label"></label>
                <input asp-for="p_occupation" class="form-control" placeholder="Software Engineer" />
                <span asp-validation-for="p_occupation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="p_gender" class="control-label"></label>
                <select asp-for="p_gender" class="form-control">
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
                <span asp-validation-for="p_gender" class="text-danger"></span>
            </div>
            <div class="form-group next-button-container">
                <input type="submit" value="Create" class="btn btn-primary" a asp-action="ChiefComplaintProcess" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
</style>
