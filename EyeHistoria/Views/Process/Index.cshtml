@model EyeHistoria.Models.Demographic

<h4>Demographic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="p_name" class="control-label"></label>
                <input asp-for="p_name" class="form-control" placeholder = "John Doe"/>
                <span asp-validation-for="p_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="p_race" class="control-label"></label>
                <input asp-for="p_race" class="form-control" placeholder = "Chinese"/>
                <span asp-validation-for="p_race" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="p_age" class="control-label"></label>
                <input asp-for="p_age" class="form-control" placeholder = "18"/>
                <span asp-validation-for="p_age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="p_occupation" class="control-label"></label>
                <input asp-for="p_occupation" class="form-control" placeholder= "Software Engineer"/>
                <span asp-validation-for="p_occupation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="p_gender" class="control-label"></label>
                <select asp-for="p_gender" class="form-control">
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
                <span asp-validation-for="p_gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ChiefComplaintProcess">Next</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
