@model EyeHistoria.Models.Question

@{
    ViewData["Title"] = "UpdateQuestion";
}

<h1>UpdateQuestion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionID" />
            <input type="hidden" asp-for="SymptomID" />
            <input type="hidden" asp-for="SymptomName" />
            <input type="hidden" asp-for="AdminID" />
            <input type="hidden" asp-for="LastModifiedBy" />
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="FollowUpID" />
            <div class="form-group">
                <label asp-for="QuestionText" class="control-label"></label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
